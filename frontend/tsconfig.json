{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                           // ✅ Bắt buộc nếu dùng "paths"
    "paths": {
      "@/*": ["src/*"]                        // ✅ Cho phép import từ "@/..." thay vì "../../"
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src"                                     // ✅ Đảm bảo TypeScript kiểm tra trong thư mục src
  ],
  "exclude": ["node_modules"]
}
